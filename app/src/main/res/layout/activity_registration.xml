<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#ffffff"
    tools:context="com.instadp.profilepicture.finalfoodapp.Registration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        >
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="#020202"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#bbbbbb"
        android:layout_weight="0.02"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Name"
            android:textColor="#7d7978"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.95"
            android:textColor="#000000"
            android:textSize="11dp"
            android:id="@+id/textview_registration_name"
            android:backgroundTint="#ffffff"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ebebf3"
            android:layout_weight="0.05"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Email"
            android:textColor="#7d7978"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.95"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:backgroundTint="#ffffff"
            android:textSize="11dp"
            android:id="@+id/textview_registration_email"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ebebf3"
            android:layout_weight="0.05"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Contact Number"
            android:textColor="#7d7978"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.95"
            android:textColor="#000000"
            android:inputType="phone"
            android:textSize="11dp"
            android:backgroundTint="#ffffff"

            android:id="@+id/textview_registration_number"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ebebf3"
            android:layout_weight="0.05"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Password"
            android:textColor="#7d7978"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.95"
            android:textColor="#000000"

            android:inputType="textPassword"
            android:backgroundTint="#ffffff"
            android:textSize="11dp"
            android:id="@+id/textview_registration_password"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ebebf3"
            android:layout_weight="0.05"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Confirm Password"
            android:textColor="#7d7978"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.95"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:backgroundTint="#ffffff"
            android:textSize="11dp"
            android:id="@+id/textview_registration_confirm_pass"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ebebf3"
            android:layout_weight="0.05"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="Sign IN"
        android:textColor="#ffffff"
        android:background="#2fa102"
        android:textStyle="bold"
        android:id="@+id/button_registration_signin"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        />


</LinearLayout>
