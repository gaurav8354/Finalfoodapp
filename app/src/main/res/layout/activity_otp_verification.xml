<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="10"
    tools:context="com.instadp.profilepicture.finalfoodapp.Otp_verification">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        >
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Verify OTP"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="#020202"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#b6b6b6"
        android:layout_weight="0.02"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="- - - -"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:id="@+id/edittext_enter_otp"
        android:textSize="55dp"
        android:gravity="center"
        android:background="@drawable/shape_checkbox"
        android:textColorHint="#66000000"
        android:inputType="phone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:donut_text_size="45dp"
        app:donut_show_text="true"
        android:id="@+id/donutprogress"
        />
    <TextView
        android:layout_weight="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to resend otp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:id="@+id/textview_resendotp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        >

        <Button
            android:id="@+id/button_verify_otp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Verify"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:background="#2fa102"
            />

        <Button
            android:id="@+id/button_verify_later"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="4dp"
            android:background="#2fa102"
            android:text="skip" />

    </LinearLayout>

</LinearLayout>
