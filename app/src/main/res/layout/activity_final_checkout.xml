<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#ffffff"
    tools:context="com.instadp.profilepicture.finalfoodapp.Registration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        >
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Order status"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="#020202"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#bbbbbb"
        android:layout_weight="0.02"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ordersucess"
            android:id="@+id/imageView2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For detail check your mail and number"
android:textSize="21dp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <TextView
        android:layout_width="329dp"
        android:layout_height="100dp"
        android:id="@+id/final_amount_paid"
        android:textColor="#000000"
        android:text="â‚¹ "
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="38dp"

        android:layout_weight="1.79" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="2"
        android:orientation="horizontal"
        ><View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Order ID :"
            android:textColor="#d9000000"
            android:textSize="25dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="1233652511245"
            android:id="@+id/order_id_textview_finalcheckout"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="#000000"
            />

    </LinearLayout>



</LinearLayout>
